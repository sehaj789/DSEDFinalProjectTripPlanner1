@model IEnumerable<DSEDFinalProjectTripPlanner.Models.ActivityTask>

@{ ViewData["Title"] = "Index"; }

<h2 style="font-family:cursive; font-size:24px;">List of Activity Task</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Activity</a>
</p>
<!-- Table For Display Activity done on Trip-->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfActivity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfirmationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suburb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfPeopleAttending)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TripId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.TypeOfActivity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ConfirmationNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SupplierName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StartDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StartTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EndDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EndTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Suburb)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.City)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Region)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Postcode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Country)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NumOfPeopleAttending)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TripId)
    </td>
    <td>
        <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id">Details</a> |
        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
