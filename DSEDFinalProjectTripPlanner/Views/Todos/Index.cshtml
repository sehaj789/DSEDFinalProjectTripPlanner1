@using DSEDFinalProjectTripPlanner.Database
@model IEnumerable<DSEDFinalProjectTripPlanner.Models.Todo>


@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @{DatabaseManager.TodoId = item.Id;}
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    @*@DatabaseManager.TodoId
                    @Html.DisplayFor(modelItem => item.Id)*@
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="col-md-12">
    @{Html.RenderPartial("Create", new Todo());}
</div>

<div>
    <a asp-action="Index" class="btn btn-warning">Back</a>
</div>
