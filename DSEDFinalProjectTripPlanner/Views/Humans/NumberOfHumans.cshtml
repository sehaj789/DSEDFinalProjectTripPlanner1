@using DSEDFinalProjectTripPlanner.Database
@model DSEDFinalProjectTripPlanner.Models.Human

@{
    ViewData["Title"] = "Create";
    ViewData["Header"] = "Add Person";
}

<div class="header">
    <h1 style="font-family:cursive; font-size:24px;">@ViewData["Header"]</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="NumberOfHumans">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label">Passengers: </label>

                    <input class="form-control" asp-for="@DatabaseManager.NumOfHumans" type="number" value="1" id="human" />
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Passenger" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="" asp-controller="Trips" asp-action="Details/@DatabaseManager.TripId" class="btn btn-warning">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
