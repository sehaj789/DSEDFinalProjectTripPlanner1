@using DSEDFinalProjectTripPlanner.Models
@model IEnumerable<DSEDFinalProjectTripPlanner.Models.Item>

@{ ViewData["Title"] = "Index"; }

<h2 style="font-family:cursive; font-size:24px;">Index</h2>

<p>
    <a asp-action="Create" style="font-family:cursive; font-size:24px;">Add Here</a>
</p>
<!-- Table For Display Lauggge on Trip-->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsChecked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TodoId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsChecked)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TodoId)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
    </td>
</tr>}
    </tbody>
</table>

<div class="col-md-12">
    @{Html.RenderPartial("Create", new Item());}
</div>
